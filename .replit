modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ClaimsIQ App"

[[workflows.workflow]]
name = "ClaimsIQ App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "reflex run --env prod --frontend-port 5000 --backend-port 8001 --loglevel warning"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["reflex", "run", "--env", "prod", "--frontend-port", "5000", "--backend-port", "8001", "--loglevel", "warning"]
