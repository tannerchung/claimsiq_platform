modules = ["python-3.11"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Setup and Run"

[[workflows.workflow]]
name = "Setup and Run"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt && reflex init && reflex run --env prod --frontend-port 5000 --backend-port 8001 --loglevel warning"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 3001

[deployment]
deploymentTarget = "vm"
build = ["pip", "install", "-r", "requirements.txt"]
run = ["sh", "-c", "reflex init && reflex run --env prod --frontend-port 5000 --backend-port 8001 --loglevel warning"]
